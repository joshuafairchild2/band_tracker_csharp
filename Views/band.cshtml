@{
  Layout="Shared/_Layout.cshtml";
}

<h2 class="text-center">@Model["selected-band"].Name</h2>
<hr>
<div class="row">
  <div class="col-sm-6">
    <h3>Venues that this band plays:</h3>
    @if(Model["band-venues"].Count ==0)
    {
      <h4>We know of no venues that this band plays. If you know of one they play at, feel free to <a href='/bands/@Model["selected-band"].Id/venues/new'>add it.</a></h4>
    }
    else
    {
      @foreach(var venue in Model["band-venues"])
      {
        <h3>@venue.Name <small>Address: @venue.Address</small></h3>
      }
    }
  </div>
  <div class="col-sm-6">
    @if(Model["band-venues"].Count < Model["all-venues"].Count)
    {
      <form action='/bands/@Model["selected-band"].Id/venues/new'>
        <button type="submit" class="btn btn-primary">Add venue to list</button>
      </form>
    }
  </div>
</div>

<form action="/" class="text-center">
  <button type="submit" class="btn btn-info">Home</button>
</form>
