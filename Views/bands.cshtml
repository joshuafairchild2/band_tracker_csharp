@{
  Layout="Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-sm-6">
    @if(Model.Count == 0)
    {
      <h3>There are no bands listed. Would you like to <a href="/bands/new">add one?</a></h3>
    }
    else
    {
      @foreach(var band in Model)
      {
        <h3><a href="/bands/@band.Id">@band.Name</a></h3>
      }
    }
  </div>
  <div class="col-sm-6">
    @if(Model.Count != 0)
    {
      <form action="/bands/new">
        <button type="submit" class="btn btn-primary">Add band</button>
      </form>
      <form action="/bands/delete" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">Delete all bands</button>
      </form>
    }
  </div>
</div>

<form action="/" class="text-center">
  <button type="submit" class="btn btn-info">Home</button>
</form>
